\ProvidesPackage{beamercolorthemeworkhw}

\mode<presentation>
% Define Colours
\definecolor{hwred}{RGB}{255,0,0}
\definecolor{glassgrey}{rgb}{220,220,220}

% Set Colours
\setbeamercolor{title}{parent=hwred}
\setbeamercolor{title}{fg=hwred}
\setbeamercolor{subtitle}{parent=hwred}
\setbeamercolor{author}{parent=glassgrey}
\setbeamercolor{date}{parent=hwred}
\setbeamercolor{institute}{parent=hwred}

\setbeamercolor{section title}{parent=hwred}
\setbeamercolor{subsection title}{parent=hwred}
\setbeamercolor{frametitle}{parent=hwred}
\setbeamercolor{background canvas}{parent=hwred}
\setbeamercolor{structure}{fg=hwred}

\setbeamercolor{normal text}{fg=black!97}

\setbeamercolor{footnote}{fg=black!97}
\setbeamercolor{page number in head/foot}{fg=hwred}

\mode
<all>
